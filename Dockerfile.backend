# ──────────────────────────────────────────────────────────────
# 🏗️ Builder Stage: Install dependencies and package
# ──────────────────────────────────────────────────────────────
FROM python:3.12-slim AS builder

WORKDIR /app

# ⬇️ Copy setup files and requirements
COPY backend/setup.py backend/requirements.txt backend/pyproject.toml ./

# ⬇️ Copy package code
COPY backend/retirement_engine ./retirement_engine

# ⬇️ Ensure __init__.py exists
RUN touch retirement_engine/__init__.py

# ⬇️ Install dependencies and uvicorn
RUN pip install --no-cache-dir -r requirements.txt

# ──────────────────────────────────────────────────────────────
# 🚀 Final Runtime Stage: Launch ASGI app
# ──────────────────────────────────────────────────────────────
FROM python:3.12-slim

WORKDIR /app

# ⬇️ Copy installed Python environment (includes uvicorn binary)
COPY --from=builder /usr/local /usr/local

# ⬇️ Copy app code
COPY --from=builder /app .

# ⬇️ Ensure uvicorn is available
RUN ln -s /usr/local/bin/uvicorn /usr/bin/uvicorn

EXPOSE 8000

# ⬇️ Launch unified ASGI app
CMD ["uvicorn", "retirement_engine.main:app", "--host", "0.0.0.0", "--port", "8000"]