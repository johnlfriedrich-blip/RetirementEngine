FROM python:3.12-slim AS builder

WORKDIR /app

# â¬‡ï¸ Copy setup files and requirements
COPY pyproject.toml ./
COPY ./src ./src

# â¬‡ï¸ Install dependencies and uvicorn
RUN pip install --no-cache-dir .

