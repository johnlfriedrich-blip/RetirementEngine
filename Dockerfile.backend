# ğŸ—ï¸ Builder Stage: Install dependencies and package
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM python:3.12-slim AS builder

WORKDIR /app

# â¬‡ï¸ Copy setup files and requirements
COPY backend/setup.py backend/requirements.txt backend/pyproject.toml ./

# â¬‡ï¸ Copy package code
COPY backend/retirement_engine ./retirement_engine

# â¬‡ï¸ Ensure __init__.py exists
RUN touch retirement_engine/__init__.py

# â¬‡ï¸ Install dependencies and uvicorn
RUN pip install --no-cache-dir -r requirements.txt

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# ğŸš€ Final Runtime Stage: Launch ASGI app
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM python:3.12-slim

WORKDIR /app

# â¬‡ï¸ Copy installed Python environment (includes uvicorn binary)
COPY --from=builder /usr/local /usr/local

# â¬‡ï¸ Copy app code
COPY --from=builder /app .

# â¬‡ï¸ Ensure uvicorn is available
RUN ln -s /usr/local/bin/uvicorn /usr/bin/uvicorn

EXPOSE 8000

# â¬‡ï¸ Launch unified ASGI app
CMD ["uvicorn", "retirement_engine.main:app", "--host", "0.0.0.0", "--port", "8000"]