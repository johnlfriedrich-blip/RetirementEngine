# ──────────────────────────────────────────────────────────────
# 🏗️ Builder Stage: Install dependencies and package
# ──────────────────────────────────────────────────────────────
FROM python:3.12-slim AS builder

WORKDIR /app

# ⬇️ Copy setup files and requirements
COPY pyproject.toml ./
COPY ./src ./src

# ⬇️ Install dependencies and uvicorn
RUN pip install --no-cache-dir .

# ──────────────────────────────────────────────────────────────
# 🚀 Final Runtime Stage: Launch ASGI app
# ──────────────────────────────────────────────────────────────
FROM python:3.12-slim

WORKDIR /app

# ⬇️ Copy installed Python environment (includes uvicorn binary)
COPY --from=builder /usr/local /usr/local

# ⬇️ Copy app code
COPY --from=builder /app .



EXPOSE 8000

# ⬇️ Launch unified ASGI app
CMD ["python", "-m", "uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]